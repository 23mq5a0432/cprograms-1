#include<stdio.h>
void main()
{
int a,b;
char op;
printf("enter the a,b values and operator :");
scanf("%d%d %c",&a,&b,&op);
switch(op)
{
    case '+' : printf("the addition value is %d",a+b);
    break;
    case'-' :printf("the sbtration value is %d",a-b);
    break;
    case '*':printf("the multiplication value is %d",a*b);
    break;
    case '/':printf("the quetient value is %d",a/b);
    break;
    case '%':printf("the remainder value is %d",a%b);
    break;
    default : printf("invalid output");
    break;
}
}    
